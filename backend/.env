# Database
# Using local MongoDB (MongoDB Desktop/Compass):
MONGODB_URI=mongodb://localhost:27017/secondhand-marketplace

# For MongoDB Atlas (cloud) - if you prefer:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/secondhand-marketplacetion

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=5000
NODE_ENV=development

# Cloudinary (for image uploads) - Add your credentials
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:5173
