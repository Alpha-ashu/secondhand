# Database
MONGODB_URI=mongodb://localhost:27017/secondhand-marketplace
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/secondhand-marketplace

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server
PORT=5000
